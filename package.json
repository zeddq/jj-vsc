{
  "name": "jj-vsc",
  "displayName": "JuJutsu VCS",
  "description": "VSCode integration for JuJutsu VCS with enhanced error handling and file operations",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "workspaceContains:**/.jj"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jj-vsc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "jj-vsc.commit",
        "title": "JuJutsu: Commit Changes",
        "icon": {
          "light": "resources/icons/light/check.svg",
          "dark": "resources/icons/dark/check.svg"
        }
      },
      {
        "command": "jj-vsc.show_diff",
        "title": "JuJutsu: Show Working Copy Diff",
        "icon": {
          "light": "resources/icons/light/diff.svg",
          "dark": "resources/icons/dark/diff.svg"
        }
      },
      {
        "command": "jj-vsc.show_history",
        "title": "JuJutsu: Show History",
        "icon": {
          "light": "resources/icons/light/history.svg",
          "dark": "resources/icons/dark/history.svg"
        }
      },
      {
        "command": "jj-vsc.merge_branch",
        "title": "JuJutsu: Merge Branch",
        "icon": {
          "light": "resources/icons/light/git-merge.svg",
          "dark": "resources/icons/dark/git-merge.svg"
        }
      },
      {
        "command": "jj-vsc.refresh",
        "title": "JuJutsu: Refresh Status",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        }
      },
      {
        "command": "jj-vsc.revertFile",
        "title": "JuJutsu: Revert File",
        "icon": {
          "light": "resources/icons/light/discard.svg",
          "dark": "resources/icons/dark/discard.svg"
        }
      },
      {
        "command": "jj-vsc.viewFileHistory",
        "title": "JuJutsu: View File History",
        "icon": {
          "light": "resources/icons/light/history.svg",
          "dark": "resources/icons/dark/history.svg"
        }
      },
      {
        "command": "jj-vsc.diffFile",
        "title": "JuJutsu: Open File Diff"
      },
      {
        "command": "jj-vsc.toggleAutoRefresh",
        "title": "JuJutsu: Toggle Auto-refresh"
      },
      {
        "command": "jj-vsc.showOutput",
        "title": "JuJutsu: Show Output"
      }
    ],
    "configuration": {
      "title": "JuJutsu VCS",
      "properties": {
        "jj-vsc.enableAutoFetch": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic fetching of changes."
        },
        "jj-vsc.defaultCommitMessage": {
          "type": "string",
          "default": "",
          "description": "Default commit message template."
        },
        "jj-vsc.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar item."
        },
        "jj-vsc.autoRefreshEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh repository status when files change."
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "jj-vsc.refresh",
          "when": "scmProvider == jj",
          "group": "navigation@1"
        },
        {
          "command": "jj-vsc.show_diff",
          "when": "scmProvider == jj",
          "group": "navigation@2"
        },
        {
          "command": "jj-vsc.commit",
          "when": "scmProvider == jj",
          "group": "navigation@3"
        }
      ],
      "view/title": [
        {
          "command": "jj-vsc.refresh",
          "when": "view == jj-commit-log",
          "group": "navigation@1"
        },
        {
          "command": "jj-vsc.show_diff",
          "when": "view == jj-commit-log",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "jj-vsc.diffFile",
          "when": "view == jj-commit-log && viewItem =~ /^jj-file-/",
          "group": "inline@1"
        },
        {
          "command": "jj-vsc.revertFile",
          "when": "view == jj-commit-log && viewItem =~ /^jj-file-(modified|added|deleted)$/",
          "group": "1_modification@1"
        },
        {
          "command": "jj-vsc.viewFileHistory",
          "when": "view == jj-commit-log && viewItem =~ /^jj-file-/",
          "group": "2_history@1"
        }
      ],
      "commandPalette": [
        {
          "command": "jj-vsc.revertFile",
          "when": "false"
        },
        {
          "command": "jj-vsc.viewFileHistory",
          "when": "false"
        },
        {
          "command": "jj-vsc.diffFile",
          "when": "false"
        }
      ]
    },
    "views": {
      "scm": [
        {
          "id": "jj-commit-log",
          "name": "Working Copy Changes",
          "when": "jj-vsc.isJjRepository",
          "contextualTitle": "JuJutsu"
        }
      ]
    },
    "colors": [
      {
        "id": "jjVsc.error",
        "description": "Color for JuJutsu errors",
        "defaults": {
          "dark": "#f48771",
          "light": "#cd3131",
          "highContrast": "#f48771"
        }
      },
      {
        "id": "jjVsc.warning",
        "description": "Color for JuJutsu warnings",
        "defaults": {
          "dark": "#ff9800",
          "light": "#ff9800",
          "highContrast": "#ff9800"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "proxyquire": "^2.1.3",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3"
  }
}
